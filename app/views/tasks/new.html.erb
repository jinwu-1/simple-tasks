<div>
    <h1> Create a Task </h1>
    <hr>

    <% if flash[:errors] %>
        <h2> List of Error(s): </h2>
        <ul>
            <% flash[:errors].each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
        <hr>
    <% end %>

    <%= form_for @task do |f| %>
        <%= f.hidden_field :project_id %>
        <%= f.label :name %>:<br>
        <%= f.text_field :name %><br><br>

        <%= f.label :description %>:<br>
        <%= f.text_area :description %><br><br>

        <%= f.submit %>
        
    <% end %>

    <%= button_to 'Back', '/', method: :get %>
    
</div>