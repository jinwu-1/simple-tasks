<div id='desc'>

    <h1>Log In Here</h1>
    <hr>

    <% if flash[:errors] %>
        <h2> List of Error(s): </h2> 
        <% flash[:errors].each do |error| %>
            <div id='box'><%= error %></div>
        <% end %>
        <hr><br>
    <% end %>  

    <%= form_tag login_index_path, class: "auth-form" do %>
        <%= label_tag :email %>: <br>
        <%= text_field_tag :email %>
        <br>

        <%= label_tag :password %>: <br>
        <%= password_field_tag :password %>
        <br><br>

        <%= submit_tag "Log In" %>
    <% end %>

    <%= button_to 'Back', '/', method: :get %>

</div>